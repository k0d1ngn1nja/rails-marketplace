<section>
  <div id="form-content">
    <div class="container">
      <div class="row">
        <div class="col-md-12 text-center">
          <h2>Login</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4 col-sm-offset-4">          
          <%= form_for(resource, as: resource_name, :html => {class: 'login-form'}, url: session_path(resource_name)) do |f| %>
            <%= render 'partials/form_errors', obj: resource %>
            
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, placeholder:'johndoe@example.com', class:'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "off", placeholder:'******', class:'form-control' %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <%= f.submit "Log in", class:'btn btn-default commentBtn' %>
            <%= link_to 'Forgot Password', new_user_password_path, class: 'btn btn-danger' %>
            <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>