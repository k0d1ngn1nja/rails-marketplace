<section>
  <div id="form-content">
    <div class="container">
      <div class="row">
        <div class="col-md-12 text-center">
          <h2 class="page-header">Forgot your password</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4 col-sm-offset-4">          
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  					<%= render 'partials/form_errors', obj: resource %>
            
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, placeholder:'johndoe@example.com', class:'form-control' %>
            </div>

            <%= f.submit "Send Reset Link", class:'btn btn-primary' %>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>