<br><br>
<div class="container">
	<div class="row">
		<div class="col-md-6">
			<div class="thumbnail">
				<%= image_tag @product.photos[0].image.url if @product.photos.length > 0 %>
			</div>
		</div><!--col6-->

		<div class="col-md-6">
			<h2><%= @product.title %></h2>
			<p><%= number_to_currency(@product.price) %></p>
			<p><%= @product.description %></p>
		</div><!--col6-->
	</div><!--/row-->

	<div class="row">
		<%= render 'photos/list' %>
	</div><!--/row-->

	<div class="row">
		<div class="col-sm-12">
			<p>
			<% if (user_signed_in?) && (current_user == @product.user) %>
				<%= link_to 'Edit', edit_product_path(@product) %> | 
				<%= link_to 'Delete', @product, method: :delete, data: {confirm: 'Are you sure?'} %>
			<% end %>
			</p>
		</div>
	</div>
</div>