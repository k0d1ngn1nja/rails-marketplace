<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<table class="table">
			  <thead>
			  	<tr>
			  		<th>Image</th>
			  		<th>Name</th>
			  		<th>Description</th>
			  		<th>Price</th>
			  		<th colspan="3"></th>
			  	</tr>
			  </thead>
			  <tbody>
			  	<% @products.each do |p| %>
			  	<tr>
			  		<td><%= image_tag p.photos[0].image.url(:thumb) if p.photos.length > 0 %></td>
			  		<td><%= p.title %></td>
			  		<td><%= truncate(p.description, length: 50) %></td>
			  		<td><%= p.price %></td>
			  		<td>
			  			<%= link_to 'Edit', edit_product_path(p) %> | 
			  			<%= link_to 'view', product_path(p) %> | 
			  			<%= link_to 'Delete', p, method: :delete, data: {confirm: 'Are you sure?'} %>
			  		</td>
			  	</tr>
			  	<% end %>
			  </tbody>
			</table>
		</div><!--/col12-->
	</div>
</div>