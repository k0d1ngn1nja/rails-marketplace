<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<table class="table">
			  <thead>
			  	<tr>
			  		<th>Product</th>
			  		<th>Description</th>
			  		<th>Price</th>
			  		<th colspan="3"></th>
			  	</tr>
			  </thead>
			  <tbody>
			  	<% @products.each do |p| %>
			  	<tr>
			  		<td><%= p.title %></td>
			  		<td><%= truncate(p.description, length: 50) %></td>
			  		<td><%= p.price %></td>
			  		<td>
			  			<%= link_to 'Edit', edit_product_path(p), class: 'btn btn-info btn-small' %> | 
			  			<%= link_to 'view', product_path(p), class: 'btn btn-info btn-small' %>
			  		</td>
			  	</tr>
			  	<% end %>
			  </tbody>
			</table>
		</div><!--/col12-->
	</div>
</div>