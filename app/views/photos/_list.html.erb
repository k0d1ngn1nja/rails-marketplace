<% if @photos %>
	<% @photos.each_slice(4) do |slice| %>
		<div class="col-sm-3">
			<% slice.each do |photo| %>
				<div class="panel panel-default">
					<div class="panel-heading">
						<%= image_tag photo.image.url(), class: 'img-responsive' %>
					</div><!--/heading-->
					<div class="panel-body">
						<% if current_user == photo.product.user %>
						<span class="pull-right">
							<%= link_to photo, remote: true, method: :delete do %>
								<i class="fa fa-times fa-lg"></i>
							<% end %>
						</span>
						<% end %>
					</div>
				</div><!--/panel-->
			<% end %>
		</div>
	<% end %>
<% end %>